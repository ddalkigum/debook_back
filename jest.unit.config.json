{
  "moduleFileExtensions": ["js", "ts", "json"],
  "rootDir": ".",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testRegex": "(unit\\.|/)(test|spec)\\.(js|ts)$",
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/$1"
  },
  "clearMocks": true,
  "collectCoverage": false,
  "collectCoverageFrom": ["src/**"],
  "testPathIgnorePatterns": ["/node_modules/", "!*.d.ts"],
  "coveragePathIgnorePatterns": ["/node_modules/", "!*.d.ts", "!*.integration.test.ts"]
}
